extends ../../layout/layout
block title
	title Адвокат Андрей Андреев
block content
	.container.publications.page-inner
		h1 публикации и общественные
			br 
			| проекты
		.publications-filters
			.publications-filter(data-filter="СМИ") СМИ
			.publications-filter(data-filter="БЛОГ") БЛОГ
			.publications-filter(data-filter="Проекты") Проекты
			.publications-filter(data-filter="Видео") Видео
		.publications__row 
			.publication-preview._full 
				.publication-preview__img-wrap 
					+picture('public-1','jpg')
				.publication-preview__content
					.publication-preview__header 
						span общественный проект
						span 29 Сентября 2021
					.publication-preview__title 
						p Что такое
							br  
							| реструктуризация бизнеса
					.publication-preview__desc
						p Вместе с адвокатом Андреем Андреевым разбираемся, почему это явление становится массовым, и пытаемся понять, действительно ли суд – действенный способ заставить говорить о себе.
					a(href="#").publication-preview__link Читать
			.publication-preview 
				.publication-preview__img-wrap 
					+picture('public-2','jpg')
				.publication-preview__content
					.publication-preview__header 
						span Публикация
						span 29 Сентября 2021
					.publication-preview__title 
						p Как судебные процессы превратились в мощный пиар-инструмент
					.publication-preview__desc
						p Вместе с адвокатом Андреем Андреевым разбираемся, почему это явление становится массовым, и пытаемся понять, действительно ли суд – действенный способ заставить говорить о себе.
					a(href="#").publication-preview__link Читать
